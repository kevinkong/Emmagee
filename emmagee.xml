<?xml version="1.0" encoding="UTF-8"?>
<project
    name="build apk file"
    default="clean" >

    <!-- set the operating system test properties -->

    <condition property="is Unix and Unix-like" >

        <os family="unix" />
    </condition>

    <condition property="isWindows" >

        <os family="windows" />
    </condition>

    <target
        name="unix_update_project"
        if="is Unix and Unix-like" >

        <exec
            executable="android"
            failonerror="true" >

            <arg line="update project -n Emmagee -p ." />
        </exec>
    </target>

    <target
        name="unix_debug"
        depends="unix_update_project"
        if="is Unix and Unix-like" >

        <exec
            executable="ant"
            failonerror="true" >

            <arg line="debug" />
        </exec>
    </target>

    <target
        name="win_update_project"
        if="isWindows" >

        <exec
            executable="cmd"
            failonerror="true" >

            <arg line="/C android update project -n Emmagee -p ." />
        </exec>
    </target>

    <target
        name="win_debug"
        depends="win_update_project"
        if="isWindows" >

        <exec
            executable="cmd"
            failonerror="true" >

            <arg line="/C ant debug" />
        </exec>
    </target>

    <target
        name="clean"
        depends="win_debug,unix_debug" >

        <delete includeEmptyDirs="true" >

            <fileset dir="./bin" >

                <exclude name="*.apk" />

                <exclude name="AndroidManifest.xml" />
            </fileset>
        </delete>
    </target>

</project>